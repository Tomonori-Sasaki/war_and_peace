<% @zukan.each do |monster_data| %>
  <%= link_to(monster_datum_path(monster_data)) do %>
    <div class="posts-index-item">
      <div class="monster-ball-icon">
        <% unless monster_data.monster_detail.where(user_id: @current_user.id, had_flag: 1).empty? %>
          <%= image_tag('standard_ball.png') %>
        <% else %>
          <p>  </p>
        <% end %>
      </div>
      <div class="post-right">
        <div class="post-id">
          ID:<%= monster_data.id %>
        </div>
        <div class="post-name">
          <% unless monster_data.monster_detail.where(user_id: @current_user.id, seen_flag: 1).empty? %>
            <%= monster_data.name %>
          <% else %>
            <p>ーーーーー</p>
          <% end %>
        </div>
        <div class="post-type">
          <% unless monster_data.monster_detail.where(user_id: @current_user.id, seen_flag: 1).empty? %>
            <%= monster_data.type %>
          <% else %>
            <p>ー</p>
          <% end %>
        </div>
      </div>
      <div class="post-left">
        <% unless monster_data.monster_detail.where(user_id: @current_user.id, seen_flag: 1).empty? %>
          <%= image_tag(monster_data.image_name) %>
        <% else %>
          <p> </p>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

<script type="text/javascript">
  $('.posts-index-item').css('background', '#FFFFFF');
  $('.posts-index-item').hover(function(){
    $(this).css('background', '#F5F5F5');
  }, function(){
    $(this).css('background', '');
  });
</script>
